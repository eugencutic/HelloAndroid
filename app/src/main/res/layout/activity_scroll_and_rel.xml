<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".week_3.ScrollAndRelActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view_orange"
            android:layout_width="@dimen/space_XL"
            android:layout_height="@dimen/space_XL"
            android:layout_margin="@dimen/space_S"
            android:background="@android:color/holo_orange_light"
            android:layout_alignParentLeft="true"></View>

        <View
            android:id="@+id/view_red"
            android:layout_width="@dimen/space_XL"
            android:layout_height="@dimen/space_XL"
            android:layout_margin="@dimen/space_S"
            android:layout_alignParentRight="true"
            android:background="@android:color/holo_red_dark"></View>

        <View
            android:id="@+id/view_blue_dark"
            android:layout_width="@dimen/space_XL"
            android:layout_height="@dimen/space_XL"
            android:layout_marginTop="@dimen/space_S"
            android:layout_marginBottom="@dimen/space_S"
            android:layout_marginRight="@dimen/space_M"
            android:background="@android:color/holo_blue_dark"
            android:layout_toLeftOf="@id/view_red"></View>

        <View
            android:id="@+id/view_blue_light"
            android:layout_width="@dimen/space_XL"
            android:layout_height="@dimen/space_XL"
            android:layout_marginBottom="@dimen/space_S"
            android:layout_marginTop="@dimen/space_S"
            android:background="@android:color/holo_blue_light"
            android:layout_toLeftOf="@id/view_blue_dark"></View>

        <TextView
            android:id="@+id/text_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_S"
            android:layout_below="@id/view_orange"
            android:text="@string/scroll_view_definition"/>

        <TextView
            android:id="@+id/text_view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_S"
            android:layout_below="@id/text_view_1"
            android:text="@string/scroll_view_definition"/>

        <TextView
            android:id="@+id/text_view_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_S"
            android:layout_below="@id/text_view_2"
            android:text="@string/scroll_view_definition"/>

        <TextView
            android:id="@+id/text_view_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_S"
            android:layout_below="@id/text_view_3"
            android:text="@string/scroll_view_definition"/>

        <TextView
            android:id="@+id/text_view_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_S"
            android:layout_below="@id/text_view_4"
            android:text="@string/scroll_view_definition"/>

    </RelativeLayout>

</ScrollView>